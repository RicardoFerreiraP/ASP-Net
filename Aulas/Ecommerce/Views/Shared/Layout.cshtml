@using Ecommerce.Models;
@using Ecommerce.DAL;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

@{
    int qtd = ItemVendaDAO.QtdNoCarrinho();
}
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce UP", "Index", "Home", null, new { @class = "navbar-brand" })
        @Html.ActionLink(Convert.ToString(qtd) + " Itens no carrinho", "CarrinhoCompras", "Home", null, new { @class = "btn btn-success", @style = "margin-left:960px" })
        @Html.ActionLink("Login", "Login", "Usuario", null, new { @class = "btn btn-secondary", @style = "margin-left:10px" })

    </nav>

    <div id="content" class="container" style="margin-top:30px">
        @RenderBody()
    </div>

        <hr style="margin-top:30px" />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Desenvolvido por Ricardo Ferreira</p>
        </footer>

</body>
</html>
