@using Ecommerce.Models
@{
    Categoria categoria = ViewBag.Categoria;
}

<div>
    @using (Html.BeginForm("AlterarCategoria", "Categoria", FormMethod.Post))
    {
        <div class="form-horizontal">
            <fieldset>
                <legend>Alterar Categoria</legend>

                @model Ecommerce.Models.Categoria

                @Html.HiddenFor(model => model.CategoriaId)

                <div class="form-group">
                    @Html.Label("Nome da categoria", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.NomeCategoria, new { @class = "form-control"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descrição da categoria", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.DescricaoCategoria, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Salvar Alterações" class="btn btn-primary">
                    </div>
                </div>

            </fieldset>
        </div>
    }
</div>

