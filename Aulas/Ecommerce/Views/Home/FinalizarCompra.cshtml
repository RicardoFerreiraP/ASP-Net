@using Ecommerce.Models
@using Ecommerce.DAL

@model List<ItemVenda>

@{
    ViewBag.Title = "CarrinhoCompras";
    double total = 0;
    Usuario usuario = ViewBag.Usuario;
}
<div class="col-sm-6">
    <h2>Finalizar compra</h2>
    <div class="card border-secondary col-sm-8" ; margin-bottom:30px; margin-top:30px">
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col-sm-8" style="text-align:center; margin-bottom:30px">
                    <b>@i.produtoItemVenda.Nome</b> <br />
                    <h5>@i.precoItemVenda X @i.quantidade</h5>
                    @{
                        double subT = i.quantidade * i.precoItemVenda;
                        total = total + subT;
                    }
                    <h6>Subtotal: @subT.ToString("C2")</h6>
                </div>
            }
        </div>
        <h3><strong>Total: @total.ToString("C2")</strong></h3>
    </div>
    <br />
    <h2>Dados Pessoais</h2>
    <div class="card border-secondary col-sm-8" ; margin-bottom:30px; margin-top:60px">
        <div class="row">

        </div>
    </div>

</div>