<div>
    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post))
    {
        <div class="form-horizontal">
            <fieldset>
                <legend>Cadastrar Produto</legend>

                @model Ecommerce.Models.Produto

                <div class="form-group">
                    @Html.Label("Nome do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do produto" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descrição do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição do produto" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Categoria do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", @placeholder = "Categoria do produto" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Preço do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Preço do produto" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Cadastrar" class="btn btn-primary">
                    </div>
                </div>

            </fieldset>
        </div>
    }
</div>

