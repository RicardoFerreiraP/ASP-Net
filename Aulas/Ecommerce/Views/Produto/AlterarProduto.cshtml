@using Ecommerce.Models
@{
    Produto produto = ViewBag.Produto;
}

<div>
    @using (Html.BeginForm("AlterarProduto", "Produto", FormMethod.Post))
    {
        <div class="form-horizontal">
            <fieldset>
                <legend>Alterar Produto</legend>

                @model Ecommerce.Models.Produto

                @Html.HiddenFor(model => model.ProdutoId)

                <div class="form-group">
                    @Html.Label("Nome do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descrição do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Categoria, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.DropDownList("Categorias", null, " -- Selecione -- ", new { @class = "form-Control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Preço do produto", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Salvar Alterações" class="btn btn-primary">
                    </div>
                </div>

            </fieldset>
        </div>
    }
</div>

